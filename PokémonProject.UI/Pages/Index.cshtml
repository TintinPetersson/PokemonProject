@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col pt-3">
                <label class="text-light" style="font-size: 20px">Select Pokémon</label>
                <select style="font-size: 20px !important;" width:210px" asp-for="@Model.PokemonName" asp-items="@Model.listOfPokemons">
                    <option selected="selected" value=""></option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col pt-3">
                <input type="submit" value="Submit" />
            </div>
        </div>
    </div>
</form>
